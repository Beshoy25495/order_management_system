<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="LOG_FILE" value="./OrderServiceLogs/OrderService/OrderService"/>
    <property name="LOG_PATTERN" value="%d{yyy-MM-dd HH:mm:ss.SSS} --OrderService-- [%t] %-5level %logger{36} - %msg%n"/>

    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_FILE}.log</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 50MB -->
                <maxFileSize>120MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- keep 30 days' worth of history -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>

    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="com.bwagih" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="rollingFile"/>
    </logger>
    <logger name="org.apache.commons.dbcp" level="trace" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="rollingFile"/>
    </logger>
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="rollingFile"/>
    </root>

</configuration>
